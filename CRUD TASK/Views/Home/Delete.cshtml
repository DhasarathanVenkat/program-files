@model CRUD_TASK.Models.Home

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<div class="alert alert-danger">
    <h4 class="alert-heading">Warning!</h4>
    <p>Are you sure you want to delete this item?</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label"></label>
        <input asp-for="Gender" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="DOB" class="control-label"></label>
        <input asp-for="DOB" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Mobile" class="control-label"></label>
        <input asp-for="Mobile" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Department" class="control-label"></label>
        <input asp-for="Department" class="form-control" readonly />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Read" class="btn btn-secondary">Cancel</a>
    </div>
</form>
